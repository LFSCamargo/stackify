{
  "name": "stackify",
  "version": "1.0.0",
  "description": "A big monorepo template for node js",
  "main": "index.js",
  "author": "LFSCamargo",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/styled-components",
      "**/styled-components/**",
      "**/react-native-*",
      "**/react-native-*/**",
      "**/@react-navigation/web*",
      "**/@react-navigation/web*/**"
    ]
  }
}
