{
  "name": "stackify",
  "version": "1.0.0",
  "description": "A simple monorepo template",
  "main": "index.js",
  "author": "LFSCamargo",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/styled-components",
      "**/styled-components/**",
      "**/react-native-*",
      "**/react-native-*/**",
      "**/@react-navigation/web*",
      "**/@react-navigation/web*/**"
    ]
  },
  "scripts": {
    "web:start": "yarn workspace @stackify/web start",
    "web:test": "yarn workspace @stackify/web test",
    "api:dev": "yarn workspace @stackify/api dev",
    "api:test": "yarn workspace @stackify/api test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "eslint-plugin-react": "^7.24.0"
  }
}
